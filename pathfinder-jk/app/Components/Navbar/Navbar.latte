                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    AKCE
                </a>
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    AKTUALITY
                </a>
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    ODDÍLY
                </a>
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    GALERIE
                </a>
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    HISTORIE
                </a>
            </div>

            {* Desktop: Spacer for logo *}
            <div class="desktop-nav logo-spacer"></div>

            {* Desktop: Right navigation links *}
            <div class="desktop-nav desktop-nav-right items-center">
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    O NÁS
                </a>
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    ODKAZY
                </a>
                <a href="#" n:class="'nav-font text-gray-700 hover:text-primary transition-colors duration-300 font-semibold'">
                    KONTAKT
                </a>
            </div>

            {* Desktop: Far right - Dark mode toggle + Login *}
            <div class="desktop-nav desktop-nav-actions items-center">
                <button type="button" class="toggle-switch" onclick="toggleDarkMode()" title="Přepnout tmavý režim">
                    <svg class="icon-sun text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
                    </svg>
                    <svg class="icon-moon text-blue-200" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
                    </svg>
                </button>

                {if $user->isLoggedIn()}
                    {* Profil *}
                    <a href="{plink Profile:}" class="nav-icon-btn bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl transition-all duration-300" title="Profil">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                    </a>
                    {* Odhlásit *}
                    <a href="{plink Sign:out}" class="nav-icon-btn bg-red-100 hover:bg-red-200 text-red-600 rounded-xl transition-all duration-300" title="Odhlásit se">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M13 3h-2v10h2V3zm4.83 2.17l-1.42 1.42C17.99 7.86 19 9.81 19 12c0 3.87-3.13 7-7 7s-7-3.13-7-7c0-2.19 1.01-4.14 2.58-5.42L6.17 5.17C4.23 6.82 3 9.26 3 12c0 4.97 4.03 9 9 9s9-4.03 9-9c0-2.74-1.23-5.18-3.17-6.83z"/>
