{* Navbar Component *}

{* Logo - samostatný fixed element pro animaci *}
<a href="{plink Home:}" id="logo-link" class="group logo-animate">
    <div class="logo-ring rounded-full transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 shadow-2xl {if $isHomepage}bg-gradient-to-br from-amber-400 via-yellow-500 to-amber-500{else}bg-white dark:bg-gray-700{/if}">
        <div class="bg-white dark:bg-gray-800 rounded-full">
            <img
                src="{$basePath}/images/logo.png"
                alt="Jižní Kříž Pathfinder"
                id="navbar-logo"
                class="object-contain rounded-full"
            >
        </div>
    </div>
</a>

